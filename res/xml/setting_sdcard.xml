<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="preference_backup_now"
        android:title="@string/preference_backup_now_title"
    />

    <CheckBoxPreference
        android:key="preference_setting_sdcard_enable"
        android:title="@string/preference_setting_sdcard_enable_title"
    />
    <ListPreference
        android:key="preference_setting_xxx_period"
        android:title="@string/preference_setting_xxx_period_title"
        android:entries="@array/preference_setting_xxx_period_entries"
        android:entryValues="@array/preference_setting_xxx_period_entryvalues"
        android:dependency="preference_setting_sdcard_enable"
        android:defaultValue="day"
    />
    <ListPreference
        android:key="preference_setting_sdcard_period_time"
        android:title="@string/preference_setting_xxx_period_time_title"
        android:defaultValue="04:30"
        android:dependency="preference_setting_sdcard_enable"
    />
    <EditTextPreference
        android:key="preference_setting_sdcard_range"
        android:title="@string/preference_setting_xxx_range_title"
        android:inputType="numberDecimal"
        android:defaultValue="7"
        android:dependency="preference_setting_sdcard_enable"
    />
    
</PreferenceScreen>
