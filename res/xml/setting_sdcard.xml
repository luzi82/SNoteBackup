<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="preference_backup_now"
        android:title="@string/preference_backup_now_title"
    />

    <CheckBoxPreference
        android:key="preference_setting_sdcard_enable"
        android:title="@string/preference_setting_sdcard_enable_title"
        android:defaultValue="@string/preference_setting_sdcard_enable_default"
    />
    <ListPreference
        android:key="preference_setting_sdcard_period"
        android:title="@string/preference_setting_xxx_period_title"
        android:dependency="preference_setting_sdcard_enable"
        android:defaultValue="@string/preference_setting_sdcard_period_default"
    />
    <ListPreference
        android:key="preference_setting_sdcard_period_time"
        android:title="@string/preference_setting_xxx_period_time_title"
    />
    <EditTextPreference
        android:key="preference_setting_sdcard_range"
        android:title="@string/preference_setting_xxx_range_title"
        android:inputType="numberDecimal"
        android:defaultValue="@string/preference_setting_sdcard_range_default"
        android:dependency="preference_setting_sdcard_enable"
    />
    <EditTextPreference
        android:key="preference_setting_sdcard_min_copy"
        android:title="@string/preference_setting_sdcard_min_copy_title"
        android:inputType="numberDecimal"
        android:defaultValue="@string/preference_setting_sdcard_min_copy_default"
        android:dependency="preference_setting_sdcard_enable"
    />
    
</PreferenceScreen>
